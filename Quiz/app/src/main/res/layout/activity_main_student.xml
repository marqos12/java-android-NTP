<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainStudent">
<RelativeLayout
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20sp">
    <TextView
        android:id="@+id/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/didact_gothic"
        android:text="@string/mainPanel"
        android:textColor="@color/borderBlue"
        android:textSize="50sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="131dp" />


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainText"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="@string/mainPanelStudent"
        android:textColor="@color/textWhite"/>

    <RelativeLayout
        android:id="@+id/quizList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="20dp"
        android:background="@drawable/quizlistcard"
        android:padding="20sp">

    </RelativeLayout>


    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="200dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quizList"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="50dp"
        android:text="@string/logout"
        android:background="@color/buttonBackgroundGray"/>

    <Button
        android:id="@+id/editProfileBtn"
        android:layout_width="200dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoutBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="50dp"
        android:text="@string/editProfile"
        android:background="@color/buttonBackgroundGray"/>

</RelativeLayout>
</ScrollView>